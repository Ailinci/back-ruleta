doctype html
html
  head
    title Mi App
    link(rel='stylesheet', href='/css/styles.css')
    style.
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #ecf0f1;
        margin-bottom: 2rem;
      }
      .nav-links {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 20px;
      }
      .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
        font-size: 0.9rem;
      }
      .user-name {
        color: #2c3e50;
        font-weight: bold;
      }
      .logout-btn {
        background: #dc3545;
        color: white;
        padding: 0.4rem 0.8rem;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.8rem;
      }
      .logout-btn:hover {
        background: #c82333;
        text-decoration: none;
      }
  body
    header
      nav.navbar
        div
          h1(style="margin: 0;") Sistema Alquilarte
        
        if usuario
          div.user-info
            span.user-name ¡Hola, #{usuario.nombre}!
            span.user-role (#{usuario.rol})
            a.logout-btn(href="/auth/logout") Cerrar Sesión
      
      if usuario
        nav
          ul.nav-links
            li
              a(href="/") Inicio
            li
              a(href="/usuarios") Usuarios
            li
              a(href="/propiedades") Propiedades
    
    main
      block content
    
    footer(style="margin-top: 40px; border-top: 1px solid #ecf0f1; padding-top: 20px; color: #7f8c8d;")
      p Sistema de Gestión Inmobiliaria - Alquilarte &copy; 2025